<?xml version='1.0' encoding='utf-8'?>
<widget id="be.rern.notepp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Note++</name>
    <description>
        Une simple application de démo de type mémo
    </description>
    <author email="guillaume.lemaire@student.hepl.be" href="">
        Guillaume Lemaire, Lucas Waroux, Liam Deroitte, Allan Tsingos
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
       
        <icon src="res/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon-xhdpi.png" density="xhdpi" />
        <icon src="res/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon-xxxhdpi.png" density="xxxhdpi" />

        <splash src="res/splash-hdpi.png" density="land-hdpi"/>
    	<splash src="res/splash-ldpi.png" density="land-ldpi"/>
    	<splash src="res/splash-mdpi.png" density="land-mdpi"/>
   		<splash src="res/splash-xhdpi.png" density="land-xhdpi"/>
   		<splash src="res/splash-xxhdpi.png" density="land-xxhdpi"/>
   		<splash src="res/splash-xxxhdpi.png" density="land-xxxhdpi"/>
     
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.4" />
</widget>
